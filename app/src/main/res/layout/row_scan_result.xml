<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scan_info_card"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_margin="4dp"
        >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/iv_scan_type"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/barcode_scan"
                android:contentDescription="@string/scan_type"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_scan_type"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/iv_scan_type"
                android:layout_alignParentTop="true"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                tools:text="Sample"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_scan_data"
                android:layout_below="@id/tv_scan_type"
                android:layout_toEndOf="@id/iv_scan_type"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:maxLines="10"
                android:ellipsize="end"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                tools:text="Sample"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</layout>